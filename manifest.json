{
  "manifest_version": 2,

  "name": "Supermarket AdBlocker (Australia)",
  "description": "Block advertisements and irrelevant in-page content from Australian online supermarkets.",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Supermarket AdBlocker (Australia)"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["cleanup.css"]
    }
  ]
}